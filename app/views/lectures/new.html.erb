<h3>New lecture for course</h3>

<%= form_with(model: @lecture, url: [@course, @lecture]) do |f|%>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <br>
  <div>
    <%= f.label :description %>
    <%= f.rich_text_area :content %>
  </div>
  <br>

  <div class="actions">
    <%= f.submit "Create" %>
  </div>

<% end %>